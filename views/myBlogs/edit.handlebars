{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<div class="card card-body">
    <h3>Edit Blog</h3>
    <form action="/myBlogs/{{blog._id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT" />
        <div class="form-group">
            <label for="title">Title
                <span class="pl-3 pr-5">
                    <small><i>Created on: {{blog.time}}</i></small> 
                </span>
                <!--
                <span class="bi bi-chat-left-text-fill">
                    {{blog.comments.length}}
                </span>
                -->
            </label>
            <input type="text" class="form-control" name="title" value="{{blog.title}}" required />
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea class="form-control" rows="10" name="details">{{blog.details}}</textarea>
        </div>
        <input type="submit" class="btn btn-dark btn-block" value="Submit" />
    </form>
</div>